<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="alugueluguebrasilnovo.alugueluguebrasil.Anuncio.AluguePublicarAnuncio">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        >
  <LinearLayout
            android:id="@+id/lai"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
    <ImageButton
        android:id="@+id/add_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_weight="35"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:background="#fff"
        android:src="@drawable/addimg" />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:layout_weight="70"
              android:orientation="vertical">
              <ImageButton
                  android:id="@+id/add_img1"
                  android:layout_width="match_parent"
                  android:layout_height="75dp"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:padding="10dp"
                  android:adjustViewBounds="true"
                  android:scaleType="centerCrop"
                  android:background="#fff"
                  android:src="@drawable/addimg" />

              <ImageButton
                  android:id="@+id/add_img2"
                  android:layout_width="match_parent"
                  android:layout_height="75dp"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:adjustViewBounds="true"
                  android:background="#fff"
                  android:padding="10dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/addimg" />
          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="75dp"
          android:orientation="horizontal">
          <ImageButton
              android:id="@+id/add_img3"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:padding="10dp"
              android:layout_weight="32"
              android:adjustViewBounds="true"
              android:scaleType="centerCrop"
              android:background="#fff"
              android:src="@drawable/addimg" />
          <ImageButton
              android:id="@+id/add_img4"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:padding="10dp"
              android:adjustViewBounds="true"
              android:scaleType="centerCrop"
              android:layout_weight="32"
              android:background="#fff"
              android:src="@drawable/addimg" />

          <ImageButton
              android:id="@+id/add_img5"
              android:layout_width="match_parent"
              android:layout_height="75dp"
              android:layout_alignParentTop="true"
              android:layout_centerHorizontal="true"
              android:layout_weight="32"
              android:adjustViewBounds="true"
              android:background="#fff"
              android:padding="10dp"
              android:scaleType="centerCrop"
              android:src="@drawable/addimg" />
      </LinearLayout>
   </LinearLayout>
        <LinearLayout
            android:id="@+id/titu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lai">
        <EditText
            android:id="@+id/edttitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:layout_weight="1"
            android:hint="Titulo"
            android:inputType="textPersonName"
            android:paddingBottom="15dp"
            android:singleLine="true" />
            <EditText
                android:id="@+id/edtvalor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:textSize="12dp"
                android:layout_weight="2"
                android:hint="Preço Aluguel"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:singleLine="true" />

        </LinearLayout>

        <EditText
            android:id="@+id/edtdesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titu"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="Descrição do aluguel..."
            android:inputType="textMultiLine"
             />
        <EditText
            android:id="@+id/edtcep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtdesc"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="CEP"
            android:inputType="number"
            android:maxLength="8"
            />

        <EditText
            android:id="@+id/edtend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtcep"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="Endereço"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/edtbairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtend"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="Bairro"
            android:inputType="text"
            />
        <EditText
            android:id="@+id/edtcidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtbairro"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="Cidade"
            android:inputType="text"
            />

        <Spinner
            android:id="@+id/edtuf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtcidade"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:paddingBottom="15dp"
            android:hint="UF"
            android:inputType="text"
            />
        <TextView
            android:id="@+id/dataatual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_enviar_anuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:layout_below="@+id/edtuf"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:text="Enviar Anúncio"
             />


    </RelativeLayout>



</ScrollView>
