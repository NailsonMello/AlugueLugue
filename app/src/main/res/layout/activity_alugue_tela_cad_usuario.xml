<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="alugueluguebrasilnovo.alugueluguebrasil.Anuncio.AluguePublicarAnuncio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        >

        <RadioGroup
            android:id="@+id/rGroupCad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <RadioButton
                android:id="@+id/rbCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pessoa Física" />

            <RadioButton
                android:id="@+id/rbCnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-32dp"
                android:text="Pessoa Jurídica" />
        </RadioGroup>


        <TextView
            android:id="@+id/nomeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Nome" />

        <EditText
            android:id="@+id/nomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/sobreView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sobrenome" />

        <EditText
            android:id="@+id/sobrenomeUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/cpfView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CPF" />

        <EditText
            android:id="@+id/cpfUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="11"
            android:inputType="number"
            android:maxLength="11" />

        <TextView
            android:id="@+id/telView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telefone" />

        <EditText
            android:id="@+id/telUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:maxLength="9" />

        <TextView
            android:id="@+id/emailView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email" />

        <EditText
            android:id="@+id/emailUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/senhaView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Senha" />

                    <EditText
                        android:id="@+id/senhaUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:ems="10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="40"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/confirView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmar senha" />

                    <EditText
                        android:id="@+id/senhaUsuarioConfir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:maxLength="20"
                        android:inputType="textPassword"
                        android:ems="10" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnUserPF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/botao_entrar_style"
                android:onClick="cadastroPF"
                android:text="Criar conta"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>

