<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="250dp">
        <ImageView
            android:id="@+id/imagem_anuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/addimg"
            android:adjustViewBounds="true"/>
</LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/titulo_anuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Titulo Anúncio"
            android:textSize="16dp"
            android:layout_weight="50"
            android:textColor="#000000"
            android:textStyle="bold" />
          <TextView
              android:id="@+id/preco_anuncio"
              android:layout_width="150dp"
              android:layout_height="wrap_content"
              android:paddingBottom="2dp"
              android:layout_weight="2"
              android:paddingLeft="15dp"
              android:layout_gravity="right"
              android:paddingRight="15dp"
              android:text="Data Anúncio"
              android:textSize="18dp"
              android:textStyle="bold"
              android:textColor="@color/colorAccent"
             />
      </LinearLayout>
        <TextView
            android:id="@+id/data_anuncio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Data Anúncio"
            android:textSize="12dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/desc_anuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="#000000"
            android:text="Descriçao Anúncio" />


    </LinearLayout>
</android.support.v7.widget.CardView>

