<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="130dp"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/imagem_anuncio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/addimg"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>
        </FrameLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/titulo_anuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:text="Titulo Anúncio"
                android:textSize="18dp"
                android:layout_weight="6.83"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_anuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="10dp"
                android:text="Data Anúncio" />

            <TextView
                android:id="@+id/desc_anuncio"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:text="Descrição Anúncio" />


        </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>

