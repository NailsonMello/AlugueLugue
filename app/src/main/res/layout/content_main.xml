<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="alugueluguebrasilnovo.alugueluguebrasil.Main.MainActivity"
    tools:showIn="@layout/app_bar_main">

        <ImageView
            android:id="@+id/imgConect"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/conect"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lista_anuncio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

        </android.support.v7.widget.RecyclerView>
        <Button
            android:id="@+id/btn_anunciar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_anunciar"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Anunciar Aluguel"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btn_testarCon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:background="#f51114"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="Tentar de novo"
            android:textColor="#ffffff"/>



</RelativeLayout>
